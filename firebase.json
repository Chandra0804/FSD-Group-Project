{
  "hosting": {
    "public": "views",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "./app.js"
      },
      {
        "source": "**/*.ejs",
        "destination": "./app.js"
      }
    ]
  }
}
