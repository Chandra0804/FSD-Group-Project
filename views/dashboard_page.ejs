<!DOCTYPE html>
<html>
  <head>
    <title>Page</title>
    <link rel="stylesheet" href="/styles/dashboard_styles.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"> -->
    <script src="/scripts/dashboard_script.js" defer></script>
  </head>
  </head>
  <body>
    
    <a class="logout-button" id="logout-button-1" href="#"><img src="images/logout_orange.png" style="position: absolute; height: 30px; width: auto; margin: 10px;" alt=""></a>


    <!-- //popup for room information// -->

    

    <div class="popup" id="popup">
      <div class="popup-header">
        <h2>Information.</h2>
        <button data-close-button class="close-button">&times;</button>
      </div>
      
      <div class="popup-body" style="padding: 50px;">

        <div class="popup-image">

        </div>

        <div class="popup-content">
          <h1>
            Room Name
          </h1>
          <p>
            This is the room description.
          </p>
          <a href="#" class="enter-room-btn" style="text-align: center;">Enter Room</a>
          
        </div>

      </div>

    </div>

    <div id="overlay">
    </div>

    <!-- // ^-^ // -->

    <!-- div for sidebar in mobile view -->

    <div class="sidebar" id="sidebar">

      <div class="sidebar-header">

        <h1 style="padding: 5px;">learnen.</h1>
        <button data-sideclose-button id="sidebar-close"><</button>

      </div>

      <div class="sidebar-body">

        <div style=" display: flex;">
          <a href="#"><img src="images/home.png" alt="" style="height: 30px; width: auto; margin: 5px;"></a>
          <a class="logout-button" id="logout-button-2" href="#"><img src="images/logout_black.png" style="position: relative; height: 30px; width: auto; margin: 5px;" alt=""></a>
        </div>
        <div class="sidebar-picture">
          
        </div>

        <div class="sidebar-information">

          <h1>Welcome </h1>
          <p>
            Joined : 01/01/2000
            <progress></progress>
          </p>
        </div>

      </div>

    </div>

    <!-- // ^-^ // -->

    <div class="container">
      <div class="left">
        <div class="profile-card">
          <div class="profile-image">
            <img src="/images/lotus.jpg" id="profile-picture" alt="Profile Picture">
          </div>
          <div class="profile-info">
            <h2 style="color: azure;">Welcome </h2>
          <div class="progress-bar">
            <div class="progress" style="width: 75%"></div>
          </div>
          <h6>Are you an educator? <a id="create-room" href="#">Create Room</a></h6>
          
        </div>
          
        </div>
      </div>
      <div class="right">
        <div class="fixed-nav">
          
          <ul id="navbar-links">
            <li id="home-button">
             <a href="/home"> <img src="images/home.png" style="height: 30px; width: auto;" alt="home">
            </a></li>
            <div>
            <li><button data-sidebar-target="#sidebar" class="hamburger-button" id="hamburger-button"> <img src="images/hamburger_icon.png" alt="hamburger"></button></li>
            </div>
            <li><a href="#">Joined Rooms</a></li>
            <li><a href="#">Explore</a></li>
          </ul>

        </div>
        <div class="image-grid">
          <% for(let i = 0; i < 15; i++) { %>
            <div class="grid-item-container">
            <div class="single-image"></div>
              <button data-popup-target="#popup" class="room-information-button">DemoRoom</button>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
